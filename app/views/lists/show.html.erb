<div class="container py-5">
  <h1><%= @list.name %></h1>
</div>

<%# show movies %>
<div class="movie-description p-5">
<% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <h3><strong><%= movie.title %></strong></h3>
    <li><strong>Rating</strong>: <%= movie.rating %></li>
    <li><strong>Description</strong>: <%= movie.overview %></li>
    <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
    <br>
    <br>
  <% end %>
</div>

<div class="form p-5">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-dark' %>
    <%= link_to "Delete list", list_path(@list), method: :delete, data: { confirm: "Are you sure?" } %>
</div>


<div class="footer p-5">
  <%= link_to "Back", root_path %>
</div>
