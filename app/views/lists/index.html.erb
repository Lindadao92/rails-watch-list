<div class="banner justify-content-center">
  <div class="header">
    <h1>Welcome to my movie list 🎬 </h1>
    <div class="col-md-12 text-center p-5">
      <%= link_to "Create a movie list", new_list_path, class: "btn btn-dark" %>
    </div>
  </div>
</div>


<div class="container col-md-12 text-center p-5">
  <div class="list">
    <h1>Categories 🍿</h1>
    <div class="list-items p-5">
        <% @lists.each do |list| %>
          <div class="card" style="width: 18rem;">
          <% if list.photo.attached? %>
          <div style="height: 200px; width: 286px; background-position: center; background-image: url('<%= cl_image_path list.photo.key, width: 286, crop: :fill %>')">
          </div>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= list.name %></h5>
              <a href="#"><%= link_to "Go to list", list_path(list), class:'btn btn-primary' %></a>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
